<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e15.alarmnats">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.e15.alarmnats.ActivityController.SetAlarmActivity"></activity>
        <activity
            android:name="com.e15.alarmnats.ActivityController.AlarmFiredActivity"
            android:excludeFromRecents="true" />
        <activity android:name="com.e15.alarmnats.ActivityController.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--<receiver-->
        <!--android:name="com.e15.alarmnats.AlarmReceiver"-->
        <!--android:enabled="true"-->
        <!--android:exported="true" />-->

        <receiver
            android:name="com.e15.alarmnats.AlarmReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>
    </application>

</manifest>