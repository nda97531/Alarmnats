<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityController.ChooseRingToneActivity">

    <TableLayout
        android:layout_width="387dp"
        android:layout_height="385dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:onClick="chooseSystemRingtone"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:drawableTop="@drawable/baseline_alarm_black_48"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/system_ringtone"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:onClick="chooseSpotifyRingtone"
                android:paddingTop="16dp"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/tvShake"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:drawableTop="@drawable/ic_spotify"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/spotify_ringtone"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
